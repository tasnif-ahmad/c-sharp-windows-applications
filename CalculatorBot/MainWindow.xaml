<Window x:Class="CalculatorBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Title="Calculator Bot"
        Height="400"
        Width="300">

        <Grid Background="#CCFFFFFF">

                <!-- CLOSE BUTTON -->
                <Button Content="✕"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Red"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnClose_Click"/>

                <!-- MAIN GRID -->
                <Grid Margin="10,0,10,10">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- OPERATION DISPLAY -->
                        <TextBlock x:Name="txtOperation"
                                   Grid.Row="0"
                                   FontSize="14"
                                   Foreground="Gray"
                                   HorizontalAlignment="Right"/>

                        <!-- RESULT DISPLAY -->
                        <TextBox x:Name="txtDisplay"
                                 Grid.Row="1"
                                 Text="0"
                                 FontSize="32"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 HorizontalContentAlignment="Right"/>

                        <!-- BUTTONS -->
                        <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Row 1 -->
                                <Button Content="C"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="⌫"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="%"
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="÷"
                                                Grid.Row="0"
                                                Grid.Column="3"
                                                Click="CalculatorButton_Click"/>

                                <!-- Row 2 -->
                                <Button Content="7"
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="8"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="9"
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="×"
                                                Grid.Row="1"
                                                Grid.Column="3"
                                                Click="CalculatorButton_Click"/>

                                <!-- Row 3 -->
                                <Button Content="4"
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="5"
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="6"
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="−"
                                                Grid.Row="2"
                                                Grid.Column="3"
                                                Click="CalculatorButton_Click"/>

                                <!-- Row 4 -->
                                <Button Content="1"
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="2"
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="3"
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="+"
                                                Grid.Row="3"
                                                Grid.Column="3"
                                                Click="CalculatorButton_Click"/>

                                <!-- Row 5 -->
                                <Button Content="0"
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="."
                                                Grid.Row="4"
                                                Grid.Column="2"
                                                Click="CalculatorButton_Click"/>
                                <Button Content="="
                                                Grid.Row="4"
                                                Grid.Column="3"
                                                Click="CalculatorButton_Click"
                                        Background="#0078D7"
                                                Foreground="White"/>
                        </Grid>
                </Grid>
        </Grid>
</Window>
