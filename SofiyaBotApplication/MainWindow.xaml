<Window x:Class="SofiyaBotApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bot"
        Width="800"
        Height="400"
        WindowStartupLocation="CenterScreen"
        Background="#2B2B2B">

    <Border Margin="10"
            Background="#3A3A3A"
            CornerRadius="6"
            Padding="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: VISUAL / IMAGE -->
            <Border Grid.Column="0"
                    Background="#1E1E1E"
                    CornerRadius="6"
                    Margin="5">

                <Image Source="/Assets/SarahBotEquilizer.gif"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            </Border>

            <!-- RIGHT: COMMAND LIST -->
            <Border Grid.Column="1"
                    Background="#F5F5F5"
                    CornerRadius="6"
                    Margin="5"
                    Padding="8">

                <ListBox x:Name="lstbCommands"
                         FontSize="14"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="#333"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Border>

        </Grid>
    </Border>
</Window>
